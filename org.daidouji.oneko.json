{
    "app-id": "org.daidouji.oneko",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/bin/oneko",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=x11",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "install desktop",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 org.daidouji.oneko.metainfo.xml -t $FLATPAK_DEST/share/metainfo",
                "install -Dm644 org.daidouji.oneko.desktop /app/share/applications/org.daidouji.oneko.desktop",
                "install -Dm644 org.daidouji.oneko.png /app/share/icons/hicolor/scalable/apps/org.daidouji.oneko.png",
                "install -Dm644 org.daidouji.oneko.png /app/share/icons/hicolor/512x512/apps/org.daidouji.oneko.png"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "./",
                    "skip": ".flatpak-builder"
                }
            ]
        },
        {
            "name": "oneko",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/tie/oneko/archive/5bbb5113fb30eda4dc5ba74718b2de1979139587.zip",
                    "sha256": "7f2a2ad6a3d176ea9fd970f7accf317e892108c079fb15e62c396cf2a876449a"
                },
                {
                    "type": "patch",
                    "paths": [
                        "./0001-install.patch"
                    ]
                }
            ]
        }
    ]
}
